# =====================================================
# SALUDGO BACKEND - Environment Variables
# =====================================================
# Copia este archivo como .env y ajusta los valores
# según tu entorno de desarrollo o producción
# =====================================================

# =====================================================
# APLICACIÓN
# =====================================================
APP_NAME="SaludGo API"
APP_ENV=development
APP_DEBUG=true
APP_TIMEZONE=America/Bogota

# =====================================================
# BASE DE DATOS
# =====================================================
DB_HOST=localhost
DB_PORT=3306
DB_DATABASE=saludgo
DB_USERNAME=root
DB_PASSWORD=
DB_CHARSET=utf8mb4

# =====================================================
# JWT (JSON WEB TOKEN)
# =====================================================
# ⚠️ CAMBIAR EN PRODUCCIÓN - Usar una clave aleatoria segura
JWT_SECRET=tu_clave_secreta_super_segura_cambiala_en_produccion
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# =====================================================
# CORS (Cross-Origin Resource Sharing)
# =====================================================
CORS_ALLOWED_ORIGINS=*
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization

# =====================================================
# SEGURIDAD
# =====================================================
# Habilitar/deshabilitar mostrar errores detallados
DISPLAY_ERRORS=true

# Rate limiting (requests por minuto)
RATE_LIMIT_ENABLED=false
RATE_LIMIT_MAX_REQUESTS=60

# =====================================================
# NOTIFICACIONES (Futuro)
# =====================================================
FIREBASE_API_KEY=
FIREBASE_PROJECT_ID=
FIREBASE_SENDER_ID=

# =====================================================
# EMAIL (Futuro)
# =====================================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM_ADDRESS=noreply@saludgo.com
MAIL_FROM_NAME=SaludGo

# =====================================================
# ALMACENAMIENTO (Futuro)
# =====================================================
# Para subir fotos de perfil, documentos, etc.
STORAGE_DRIVER=local
STORAGE_PATH=/uploads
STORAGE_MAX_FILE_SIZE=5242880

# =====================================================
# SERVICIOS EXTERNOS (Futuro)
# =====================================================
# Google Maps para geolocalización
GOOGLE_MAPS_API_KEY=

# Pasarela de pagos
PAYMENT_GATEWAY=stripe
PAYMENT_PUBLIC_KEY=
PAYMENT_SECRET_KEY=

# SMS (Twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# =====================================================
# LOGGING
# =====================================================
LOG_LEVEL=debug
LOG_PATH=/logs

# =====================================================
# CACHE (Futuro)
# =====================================================
CACHE_DRIVER=file
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# =====================================================
# NOTAS DE PRODUCCIÓN
# =====================================================
# Para mover a producción:
# 1. Cambiar APP_ENV=production
# 2. Cambiar APP_DEBUG=false
# 3. Generar nuevo JWT_SECRET aleatorio
# 4. Configurar CORS con orígenes específicos
# 5. Habilitar HTTPS
# 6. Configurar backup de base de datos
# 7. Habilitar logs en archivo
# 8. Configurar rate limiting
